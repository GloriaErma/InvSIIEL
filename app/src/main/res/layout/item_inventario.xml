<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemInventarioUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="Usuario"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsUser"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemInventarioExistencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="Existencia"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsScore" />

            <TextView
                android:id="@+id/tvItemInventarioPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="Precio"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsScore" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemInventarioProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="Nombre Producto"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/itemCommentsComment" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>