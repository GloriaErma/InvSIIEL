<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.activies.SplashScreenActivity">
<!--Esta es la que llama la activity  SplashScreenActivity-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="54dp" />

        <TextView
            android:id="@+id/greetings"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/defaultLayoutMargin"
            android:gravity="center"
            android:scaleType="centerInside"
            android:text="@string/greetings"
            android:textColor="@color/primaryTextColor"
            android:textSize="45dp"
            android:textStyle="bold"
            tools:text="¡¡Bienvenid@s!! " />

        <Space
            android:layout_width="match_parent"
            android:layout_height="54dp" />

        <TextView
            android:id="@+id/Texto"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/defaultLayoutMargin"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:text="APP Inventario SIIEL, que permite ingresar los productos con su existencia y precio"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/sizeTitleComments"
            tools:text="APP Inventario SIIEL, que permite ingresar los productos con su existencia y precio" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="54dp" />

        <ImageView
            android:id="@+id/ivSplahScreen"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:src="@drawable/logo10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>